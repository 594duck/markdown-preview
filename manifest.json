{
  "name": "Markdown Preview",
  "manifest_version": 2,
  "version": "0.4",
  "description": "Converts and previews markdown files (.md, .markdown) to HTML right inside Chrome.",
  "icons": {
    "128": "images/icon.png",
    "48": "images/icon.png",
    "16": "images/icon.png"
  },
  "content_scripts": [
    {
      "matches": [
        "http://*/*.md*"      , "file://*/*.md", 
        "http://*/*.markdown*", "file://*/*.markdown",
        "http://*/*.mdown*", 	"file://*/*.mdown",
        "http://*/*.text"     , "file://*/*.text"
      ],
      "js": ["jquery.js", "showdown.js", "markdownify.js", "options.js"]
    }
  ],
  "permissions": [
      "storage", 
      "tabs", 
      "<all_urls>"
  ],
  "web_accessible_resources": [
      "markdown.css"
  ],
  "sandbox" : {
  },
  "options_page": "options.html"
}
